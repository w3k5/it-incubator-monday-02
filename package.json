{
  "name": "it-incubator-monday-02",
  "version": "1.0.0",
  "main": "src/index.js",
  "repository": "https://github.com/w3k5/it-incubator-monday-02.git",
  "author": "Vladislav Marchenko <w3k5@yandex.ru>",
  "license": "MIT",
  "scripts": {
    "dev": "ts-node-dev --inspect --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "test:coverage": "jest --coverage --silent",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "compodoc": "npx compodoc -p tsconfig.doc.json",
    "compodoc:serve": "compodoc -s",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.ts": [
        "compodoc -p tsconfig.doc.json --coverageMinimumPerFile 25"
      ]
    }
  },
  "dependencies": {
    "@compodoc/compodoc": "^1.1.19",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.20.0",
    "cors": "^2.8.5",
    "dayjs": "^1.11.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-validator": "^6.14.2",
    "inversify": "^6.0.1",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^4.8.1",
    "mongoose": "^6.5.4",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.5.0",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^29.0.2",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/node": "^18.7.4",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "eslint": "^8.22.0",
    "husky": "^8.0.1",
    "jest": "28.1.3",
    "lint-staged": "^13.0.3",
    "mongodb-memory-server": "^8.9.1",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "supertest": "^6.2.4",
    "ts-jest": "28.0.8",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.4"
  }
}
